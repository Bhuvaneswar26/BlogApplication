<%- include('partials/header.ejs')  %>












  <section class="latest-podcast-section section-padding pb-0" id="section_2">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-12 col-12">
        <div class="section-title-wrap mb-5">
          <h4 class="section-title">Latest Blogs</h4>
        </div>
      </div>

      <% latestposts.forEach(item => { %>

      <div class="col-lg-6 col-md-6 col-sm-12 mb-4">
        <div class="custom-block" style="background-color: #0d6dfd83;">
          <div class="row">
            <div class="col-md-6">
              <div class="custom-block-icon-wrap">
                <img src="<%= item.imagePath %>" style="height: 150px; width: 250px; object-fit: cover;" alt="sorry">
              </div>
            </div>
            <div class="col-md-6">
              <div class="custom-block-info">
                <h5 class="mb-2">
                  <a href="#" style="color: black;">Title: <%= item.title %></a>
                  <a href="#" style="color: rgba(0, 0, 0, 0.795); font-weight: 500;">Caption: <%= item.caption %></a>
                </h5>
                <p class="mb-0" style="color: black; font-weight: 600;">Theme: <%= item.theme %></p>
                <div class="custom-block-bottom d-flex justify-content-between mt-3" style="background-color: black; padding: 0.3rem; border-radius: 1rem;">
                  <a href="#" class="bi-heart me-4">
                    <span><%= item.likeCount %></span>
                  </a>
                  <a href="#" class="bi-chat me-1">
                    <span><%= item.commentCount %></span>
                  </a>
                </div>
                <div class="mt-2">
                  <a href="/readblog/<%= item._id %>" class="btn custom-btn">Read It</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <% }) %>

    </div>
  </div>
</section>




